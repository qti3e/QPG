{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "noEmit": false,
    "lib": ["es2015"],
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*", "bin/**/*", "*.ts", "*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
